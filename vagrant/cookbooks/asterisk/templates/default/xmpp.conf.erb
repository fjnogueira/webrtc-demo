[general]
autoregister=yes
autoprune=no

[ejabberd]
type=client
timeout=5
priority=1
port=5222
usetls=no
usesasl=yes
serverhost=<%= @hostname %>
<% if @user %>
username=<%= @user['username'] %>@<%= @hostname %>
secret=<%= @user['password'] %>
status=<%= @user['status'] %>
statusmessage="<%= @user['message'] %>"
<% end %>
